<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/total_contacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_contacts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/get_contacts"
        android:layout_below="@id/total_contacts" />

    <Button
        android:id="@+id/get_contacts"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/forward_contacts"
        android:layout_centerHorizontal="true"
        android:text="Get Contacts"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/forward_contacts"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/restore_contacts"
        android:layout_centerHorizontal="true"
        android:text="Forward contacts"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/restore_contacts"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Restore contacts"
        android:textAllCaps="false" />

</RelativeLayout>